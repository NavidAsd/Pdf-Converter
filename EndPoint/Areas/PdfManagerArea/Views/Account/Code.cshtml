@{ Layout = null;}

<!DOCTYPE html>
<head>
    <link href="~/Areas/Admin/css/Recovery.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/png" href="~/images/logo/66-modified.png">
    <title>Recovery-Code</title>
</head>


<body>
    <form action="#" class="login" role="form">
        @if (ViewBag.Time != null)
        {
            <h6>You have 4 minutes to use the submitted code </h6>
            <h7>@ViewBag.Time</h7>
        }
        <input type="text" class="form-control" placeholder="Code" id="Code">
        <br />
        <a class="btn" onclick="resend()">Resend <img src="~/Areas/Admin/images/refresh_240px.png" width="45" style="cursor:pointer" /></a>
        <i style="cursor:pointer" onclick="Execute()">Submit</i>
    </form>
</body>


<!-- file js---------------------------------------------------->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Sweetalert2/sweetalert2.min.js"></script>


<script>
    function Execute() {
        var data = { 'Code': $("#Code").val() };


        $.ajax({
            contentType: 'application/x-www-form-urlencoded',
            dataType: 'json',
            type: "POST",
            url: "/PdfManagerArea/Account/VerifyCode/",
            data: data,

            success: function (data) {
                if (data.success == true) {
                    window.location = "/PdfManagerArea/Account/ChangePass/";
                }
                else {

                    swal.fire(
                        'warning!',
                        data.message,
                        'warning'
                    );
                }

            },
            error: function (request, status, error) {
                swal.fire(
                    'warning!',
                    request.responseText,
                    'warning'
                );
            }

        });
    }

    function resend() {
        var data = "";
        $.ajax({
            contentType: 'application/x-www-form-urlencoded',
            dataType: 'json',
            type: "POST",
            url: "/PdfManagerArea/Account/CheckEmail/",
            data: data,

            success: function (data) {
                if (data.success == true) {
                    window.location.reload();
                }
                else {

                    swal.fire(
                        'warning!',
                        data.message,
                        'warning'
                    );
                }

            },
            error: function (request, status, error) {
                swal.fire(
                    'warning!',
                    request.responseText,
                    'warning'
                );
            }

        });
    }
</script>