@{ Layout = null;}

<!DOCTYPE html>
<head>
    <link href="~/Areas/Admin/css/Recovery.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/png" href="~/images/logo/66-modified.png">
    <title>Recovery-SubmitEmail</title>
</head>


<body>
    <form action="#" class="login" role="form">
        <input type="text" class="form-control" placeholder="Your Email" id="Email">
        <br />
        <i style="cursor:pointer" onclick="Execute()">Submit</i>
    </form>
</body>


<!-- file js---------------------------------------------------->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Sweetalert2/sweetalert2.min.js"></script>


<script>
    function Execute() {
        var data = {
            'Email': $("#Email").val(),
        };
        $.ajax({
            contentType: 'application/x-www-form-urlencoded',
            dataType: 'json',
            type: "POST",
            url: "/PdfManagerArea/Account/CheckEmail/",
            data: data,
            success: function (data) {
                if (data.success == true) {
                    window.location = "/PdfManagerArea/Account/Code/";
                }
                else {

                    swal.fire(
                        'warning',
                        data.message,
                        'warning'
                    );
                }
            },
            error: function (request, status, error) {
                swal.fire(
                    'warning',
                    request.responseText,
                    'warning'
                );
            }
        });
    }
</script>