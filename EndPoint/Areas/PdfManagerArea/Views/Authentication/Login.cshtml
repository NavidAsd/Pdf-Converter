@{
    Layout = null;
}

<head>
    <link href="~/Areas/Admin/css/login.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/png" href="~/images/logo/66-modified.png">
    <title>PdfConverter | Admin-Login</title>
</head>

<style>
    .overlay {
        background: url("/Areas/Admin/images/we.jpg");
    }

    body {
        align-items: center;
        background-color: var(--blue);
        background: url("/Areas/Admin/images/Rowb.jpg");
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        display: grid;
        height: 100vh;
        place-items: center;
    }
</style>
<div class="container right-panel-active">
    <!-- Sign In -->
    <div class="container__form container--signin">
        <form action="javascript:void(0);" class="form">
            <h2 class="form__title">Sign In</h2>
            <input id="Email" type="email" placeholder="Email" class="input" />
            <input id="Password" type="password" placeholder="Password" class="input" onkeypress="handle(event)" />
            <a href="\PdfManagerArea\Account\Recovery" class="link">Forgot your password?</a>
            <button class="btn" onclick="Login()">Done</button>

        </form>

    </div>
    <!-- Overlay -->
    <div class="container__overlay">
        <div class="overlay">
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Sweetalert2/sweetalert2.min.js"></script>

<script>
    function handle(e) {
        if (e.KeyCode == 13) {
            e.preventDefault();
            Login();
        }
    }
    function Login() {
        var data = {
            'Email': document.getElementById("Email").value,
            'Password': document.getElementById("Password").value,
        }

        $.ajax({
            contentType: 'application/x-www-form-urlencoded',
            dataType: 'json',
            type: "POST",
            url: "/PdfManagerArea/Authentication/SignIn/",
            data: data,
            success: function (data) {
                if (data.success) {
                    window.location.replace("/PdfManagerArea/Authentication/Code/");
                }
                else {
                    swal.fire(
                        'warning',
                        data.message,
                        'warning'
                    );
                }
            },
            error: function (request, status, error) {
                alert(request.responseText);
            }

        });
    }
</script>