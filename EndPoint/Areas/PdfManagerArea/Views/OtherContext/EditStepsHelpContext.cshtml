@model ResultMessage<Application.Services.Query.ViewContext.ReturnTreeStepHelp.ResultReturnTreeStepHelpDto>
@using Common;
@{
    ViewData["Title"] = "Edit Service";
    Layout = "~/Areas/PdfManagerArea/Views/Shared/_Adminlayout.cshtml";
}


<head>
    <link href="~/Areas/Admin/css/NoResult.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/png" href="~/images/logo/66-modified.png">
    <title>PdfConverter | Admin-Edit Steps Help Context</title>
</head>


<style>
    body {
        align-items: center;
        background-color: var(--blue);
        background: url("/Areas/Admin/images/New_A.jpg");
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        display: grid;
        height: 100vh;
        place-items: center;
    }
</style>


<section class="basic-elements">
    <div class="row">
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title mb-0">Edit @Model.Enything.Service Help Context</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="px-3">
                        <div class="form">
                            <div class="form-body">
                                <div class="row">

                                    <p id="_Id" style="display:none">@Model.Enything.Id</p>

                                    <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label for="basicInput"> Step1</label>
                                            <textarea id="Step1" class="form-control " rows="6" required>@Model.Enything.Step1</textarea>
                                        </fieldset>
                                    </div>

                                    <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label for="basicInput"> Step2</label>
                                            <textarea id="Step2" class="form-control " rows="6" required>@Model.Enything.Step2</textarea>
                                        </fieldset>
                                    </div>

                                    <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label for="basicInput"> Step3</label>
                                            <textarea id="Step3" class="form-control " rows="6" required>@Model.Enything.Step3</textarea>
                                        </fieldset>
                                    </div>

                                    <hr />

                                    <a class="btn btn-success col-md-12" onclick="EditBasicInfo()"> Save Changes </a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-1.12.3.min.js"></script>

<link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Sweetalert2/sweetalert2.min.js"></script>


<script>

    function EditBasicInfo() {
        var Data = {
            "Step1": $("#Step1").val(),
            "Step2": $("#Step2").val(),
            "Step3": $("#Step3").val(),
            "Id": document.getElementById("_Id").textContent,
        };
        $.ajax({
            contentType: 'application/x-www-form-urlencoded',
            dataType: 'json',
            type: "POST",
            url: "/PdfManagerArea/OtherContext/UpdateThreeStepHelpContext/",
            data: Data,
            success: function (data) {
                if (data.success == true) {
                    swal.fire(
                        'success',
                        data.message,
                        'success'
                    ).then(function (isConfirm) {
                        location.reload();
                    });
                }
                else {
                    swal.fire(
                        'warning',
                        data.message,
                        'warning'
                    );
                }
            },
            error: function (request, status, error) {
                alert(request.responseText);
            }
        });
    }

</script>
