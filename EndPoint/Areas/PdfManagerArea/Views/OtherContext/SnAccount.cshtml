@model Common.ResultMessage<Application.Services.Query.ViewContext.ReturnSocialNetworks.ResultReturnAllSocialNetworkDto>
@{
    Layout = "~/Areas/PdfManagerArea/Views/Shared/_Adminlayout.cshtml";
}


<head>
    <link rel="shortcut icon" type="image/png" href="~/images/logo/66-modified.png">
    <title>PdfConverter | Admin-Accounts</title>
    <link href="~/Areas/Admin/css/SocialAccounts.css" rel="stylesheet" />
</head>




<div class='login'>
    <h2>SocialNetwork Accounts</h2>
    <p id="_Id" style="display:none">@Model.Enything.Id</p>
    @if (Model.Success == true)
    {
                    <p>LastUpdate: @Model.Enything.LastUpdate</p>
    }
    <div>
        <input id='reddit' placeholder='Reddit' type='text' value="@Model.Enything.Reddit" title="If you do not want a field to be displayed, leave it blank">
    </div>
    <div>
        <input id='pinterest' placeholder='Pinterest' type='text' value="@Model.Enything.Pinterest" title="If you do not want a field to be displayed, leave it blank">
    </div>
    <div>
        <input id='medium' placeholder='Medium' type='text' value="@Model.Enything.Medium" title="If you do not want a field to be displayed, leave it blank">
    </div>
    <div>
        <input id='vk' placeholder='VK' type='text' value="@Model.Enything.VK" title="If you do not want a field to be displayed, leave it blank">
    </div>
    <div>
        <input id='tumblr' placeholder='Tumblr' type='text' value="@Model.Enything.Tumblr" title="If you do not want a field to be displayed, leave it blank">
    </div>
    <div>
        <input id='okru' placeholder='Okru' type='text' value="@Model.Enything.Okru" title="If you do not want a field to be displayed, leave it blank">
    </div>
    <div>
        <input id='facebook' placeholder='Facebook' type='text' value="@Model.Enything.Facebook" title="If you do not want a field to be displayed, leave it blank">
    </div>
    <div>
        <input id='twitter' placeholder='Twitter' type='text' value="@Model.Enything.Twitter" title="If you do not want a field to be displayed, leave it blank">
    </div>
    <br />
    <input class='animated' type='submit' value='Save' onclick="SendData()">
    <br />
</div>

<link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Sweetalert2/sweetalert2.min.js"></script>


<script>
    function SendData() {
        var Data = new FormData();
        Data.append("Reddit", document.getElementById("reddit").value);
        Data.append("Pinterest", document.getElementById("pinterest").value);
        Data.append("Medium", document.getElementById("medium").value);
        Data.append("VK", document.getElementById("vk").value);
        Data.append("Tumblr", document.getElementById("tumblr").value);
        Data.append("Okru", document.getElementById("okru").value);
        Data.append("Facebook", document.getElementById("facebook").value);
        Data.append("Twitter", document.getElementById("twitter").value);
        Data.append("Id", document.getElementById("_Id").textContent);


        $.ajax({
            type: "POST",
            url: "/PdfManagerArea/OtherContext/UpdateAccounts/",
            contentType: false,
            processData: false,
            data: Data,
            success: function (data) {

                if (data.success == true) {

                    swal.fire(
                        'Success',
                        data.message,
                        'success'
                    ).then(function (isConfirm) {
                        location.reload();

                    });
                }
                else {

                    swal.fire(
                        'Warning',
                        data.message,
                        'warning'
                    );
                }

            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            }

        });
    }
</script>