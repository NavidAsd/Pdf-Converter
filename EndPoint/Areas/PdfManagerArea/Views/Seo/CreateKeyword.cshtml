@{
    Layout = "~/Areas/PdfManagerArea/Views/Shared/_Adminlayout.cshtml";
}


<head>
    <link rel="shortcut icon" type="image/png" href="~/images/logo/66-modified.png">
    <title>PdfConverter | Admin-Create Keyword</title>
</head>

<section class="basic-elements">
    <div class="row">
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title mb-0">Page: @ViewBag.PageName</h4>
                        <p id="_Id" style="display:none">@ViewBag.MetaId</p>
                    </div>
                </div>
                <div class="card-body">
                    <div class="px-3">
                        <div class="form">
                            <div class="form-body">
                                <div class="row">

                                    <div class="col-xl-2 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label for="basicInput"> Keyword </label>
                                            <input type="text" class="form-control" id="_text" placeholder="Value" onkeypress="handle(event)" />
                                        </fieldset>
                                    </div>
                                    <div class="col-xl-2 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <br />
                                            <a onclick="SetFeature()" class="btn btn-success">Add</a>
                                        </fieldset>
                                    </div>


                                    <br class="clear" />

                                    <table id="tbl_Features" class="col-md-12 table table-bordered table-hover  table-condensed table-responsive">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Key
                                                </th>
                                                <th>
                                                    
                                                </th>
                                                <th>

                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>


                                    <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <br />
                                            <p>*Duplicate values ​​will not be added to the <a href="/PdfManagerArea/Seo/MetatagKeywords?MetaId=@ViewBag.MetaId">main list</a></p>
                                            <a id="btnAddProduct" class="btn btn-success col-md-12" onclick="SendData()"> Add keys </a>

                                        </fieldset>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-1.12.3.min.js"></script>

<link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Sweetalert2/sweetalert2.min.js"></script>


<script>

    function SendData() {
        var data = new FormData();
        data.append("MetaId", document.getElementById("_Id").textContent);
        var dataFeaturesViewModel = $('#tbl_Features tr:gt(0)').map(function () {
            return {
                DisplayName: $(this.cells[0]).text(),
                Value: $(this.cells[1]).text(),
            };
        }).get();

        $.each(dataFeaturesViewModel, function (i, val) {
            data.append('[' + i + '].Key', val.DisplayName);
        });

        $.ajax({
            type: "POST",
            url: "/PdfManagerArea/Seo/AddNewKeys/",
            contentType: false,
            processData: false,
            data: data,
            success: function (data) {
                if (data.success == true) {
                    swal.fire(
                        'success',
                        data.message,
                        'success'
                    ).then(function (isConfirm) {
                        location.reload();
                    });
                }
                else {
                    swal.fire(
                        'Warning',
                        data.message,
                        'warning'
                    );
                }
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            }
        });
    }

    function SetFeature() {

        var txtDisplayName = $("#_text").val();
        const txtValue = "";

        if (typeof txtDisplayName == 'undefined' || !txtDisplayName || txtDisplayName.length === 0 || txtDisplayName === "" || !/[^\s]/.test(txtDisplayName) || /^\s*$/.test(txtDisplayName) || txtDisplayName.replace(/\s/g, "") === "") {

            swal.fire(
                'Warning',
                "please fill out blank",
                'warning'
            );
        }
        else {
            $('#tbl_Features tbody').append('<tr> <td>' + txtDisplayName + '</td>  <td>' + txtValue + '</td> <td> <a class="idFeatures btnDelete btn btn-danger"> Delete </a> </td> </tr>');
            $("#_text").val('');
        }


        $("#tbl_Features").on('click', '.idFeatures', function () {
            $(this).closest('tr').remove();
        });
    }

    function handle(e) {
        if (e.KeyCode == 13) {
            e.preventDefault();
            SetFeature();
        }
    }

</script>
