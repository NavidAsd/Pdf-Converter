@model ResultMessage<Domain.Entities.OtherContext.AdditionalHelp>
@using Common;
@using Application.Services.Query.ReturnFeatureDetails
@{
    Layout = "~/Areas/PdfManagerArea/Views/Shared/_Adminlayout.cshtml";
}

<head>
    <link rel="shortcut icon" type="image/png" href="~/images/logo/66-modified.png">
    <title>PdfConverter | Admin-Edit AdditionalHelp</title>
</head>


<style>
    body {
        align-items: center;
        background-color: var(--blue);
        background: url("/Areas/Admin/images/New_A.jpg");
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        display: grid;
        height: 100vh;
        place-items: center;
    }
</style>


<section class="basic-elements">
    <div class="row">
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title mb-0">Additional Help</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="px-3">
                        <div class="form">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label for="basicInput"> </label>
                                            <input type="text" class="form-control" value="@Model.Enything.Service" readonly>
                                            <input type="text" class="form-control" id="_Id" style="display:none" value="@Model.Enything.Id" readonly>
                                        </fieldset>
                                    </div>

                                    <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label for="basicInput"> Help Context</label>
                                            <input type="text" id="HelpContext" class="form-control" value="@Model.Enything.HelpContext">
                                        </fieldset>

                                    </div><div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label for="basicInput"> Service Description</label>
                                            <input type="text" id="ServiceDescription" class="form-control" value="@Model.Enything.ServiceDescription">
                                        </fieldset>
                                    </div>

                                    <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                                        <fieldset class="form-group">
                                            <label for="basicInput"> Title</label>
                                            <input type="text" id="Title" class="form-control" value="@Model.Enything.Title" >
                                        </fieldset>
                                    </div>

                                    <hr />

                                    <a class="btn btn-success col-md-12" onclick="EditBasicInfo()"> Save Change </a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Sweetalert2/sweetalert2.min.js"></script>

<script>

    function EditBasicInfo() {
        var Data = {
            'Id': document.getElementById("_Id").value,
            'Title': document.getElementById("Title").value,
            'HelpContext': document.getElementById("HelpContext").value,
            'ServiceDescription': document.getElementById("ServiceDescription").value
        };

        $.ajax({
            contentType: 'application/x-www-form-urlencoded',
            dataType: 'json',
            type: "POST",
            url: "/PdfManagerArea/Services/UpdateBasicAdditionalHelp/",
            data: Data,
            success: function(data) {
                if (data.success) {
                    swal.fire(
                        'success',
                        data.message,
                        'success'
                    ).then(function(isConfirm) {
                        location.reload();
                    });
                }
                else {
                    swal.fire(
                        'warning',
                        data.message,
                        'warning'
                    );
                }
            },
            error: function(xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            }
        });
    }

</script>
